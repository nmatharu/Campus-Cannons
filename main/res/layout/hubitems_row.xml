<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:orientation="horizontal"
    android:id="@+id/hubItemRowLayout">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:id="@+id/hir_Image"
        android:contentDescription="@string/cannon_image_desc" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:fontFamily="@font/dimbo"
        android:layout_marginEnd="8sp"
        android:textSize="24sp"
        android:text=""
        android:id="@+id/hir_ItemName"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/dimbo"
        android:layout_marginEnd="8sp"
        android:textSize="24sp"
        android:text=""
        android:id="@+id/hir_ItemMinDmg"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/dimbo"
        android:layout_marginEnd="8sp"
        android:textSize="24sp"
        android:text=""
        android:id="@+id/hir_ItemMaxDmg"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/dimbo"
        android:layout_marginEnd="8sp"
        android:textSize="24sp"
        android:text=""
        android:id="@+id/hir_ItemReload"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:fontFamily="@font/dimbo"
        android:textSize="24sp"
        android:text=""
        android:id="@+id/hir_BuyButton"/>

</LinearLayout>